<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/teal_700"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.bakerj.infinitecards.InfiniteCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/view"
        app:animDuration="1000"
        app:cardRatio="1"></com.bakerj.infinitecards.InfiniteCardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:id="@+id/pre"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pre"></androidx.appcompat.widget.AppCompatButton>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:id="@+id/next"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next"></androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>
    
</RelativeLayout>